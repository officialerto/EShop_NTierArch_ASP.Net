<body>

    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Login to your account</h2>
                        <form action="/Account/Login" method="post">
                            <input type="email" placeholder="Email Address" name="Email" />
                            <input type="password" placeholder="Password" name="Password" />
                            <button type="submit" class="btn btn-default">Login</button>
                            <a href="/User/ResetPassword" class="btn btn-primary">Reset Password</a>
                        </form>
                    </div><!--/login form-->
                </div>
                <div class="col-sm-1">
                    <h2 class="or">OR</h2>
                </div>
                <div class="col-sm-4">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>New User Signup!</h2>
                        <form action="/Account/Register" method="post">
                            <input type="text" placeholder="Name" name="Name" />
                            @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
                            <input type="text" placeholder="Surname" name="SurName" />
                            @Html.ValidationMessageFor(x => x.SurName, "", new { @style = "color:red" })
                            <input type="email" placeholder="Email Address" name="Email" required maxlength="50" />
                            @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color:red" })
                            <input type="text" placeholder="UserName" name="UserName" />
                            @Html.ValidationMessageFor(x => x.UserName, "", new { @style = "color:red" })
                            <input type="password" placeholder="Password" name="Password" required maxlength="50" />
                            @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })
                            <input type="password" placeholder="RePassword" name="RePassword" required maxlength="50" />
                            @Html.ValidationMessageFor(x => x.RePassword, "", new { @style = "color:red" })
                            <button type="submit" class="btn btn-default">Signup</button>
                        </form>
                    </div><!--/sign up form-->
                </div>
            </div>
        </div>
    </section><!--/form-->


